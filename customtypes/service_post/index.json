{
  "format": "page",
  "id": "service_post",
  "label": "Service Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "URL Slug",
          "placeholder": "unique-service-url"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Service Title",
          "placeholder": "Enter service title"
        }
      },
      "service_description": {
        "type": "StructuredText",
        "config": {
          "label": "Service Description",
          "placeholder": "Detailed service description",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "tagline": {
        "type": "Text",
        "config": {
          "label": "Tagline",
          "placeholder": "Please Enter Tagline (MUST) e.g, (Define the foundations.  Align your ...)"
        }
      },
      "main_image": {
        "type": "Image",
        "config": {
          "label": "Main Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "service_items": {
        "type": "Group",
        "config": {
          "label": "Service Items",
          "repeat": true,
          "fields": {
            "item": {
              "type": "Text",
              "config": {
                "label": "Service Item",
                "placeholder": "e.g., UX/UI Design"
              }
            }
          }
        }
      },
      "related_projects": {
        "type": "Group",
        "config": {
          "label": "Related Projects",
          "repeat": true,
          "fields": {
            "project": {
              "type": "Link",
              "config": {
                "label": "Project",
                "select": "document",
                "customtypes": ["project_post"]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "services_images_slider": {
              "type": "SharedSlice"
            },
            "service_hero": {
              "type": "SharedSlice"
            },
            "process_steps": {
              "type": "SharedSlice"
            },
            "service_offerings": {
              "type": "SharedSlice"
            },
            "block_content": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO Title"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "SEO Description"
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 2400,
            "height": 1260
          }
        }
      }
    }
  }
}
