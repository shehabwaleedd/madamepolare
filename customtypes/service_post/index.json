{
  "format": "page",
  "id": "service_post",
  "label": "Service Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "URL Slug",
          "placeholder": "unique-service-url"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Service Title",
          "placeholder": "Enter service title"
        }
      },
      "service_description": {
        "type": "StructuredText",
        "config": {
          "label": "Service Description",
          "placeholder": "Detailed service description",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "tagline": {
        "type": "Text",
        "config": {
          "label": "Tagline",
          "placeholder": "Please Enter Tagline (MUST) e.g, (Define the foundations.  Align your ...)"
        }
      },
      "main_image": {
        "type": "Image",
        "config": {
          "label": "Main Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "service_items": {
        "type": "Group",
        "config": {
          "label": "Service Items",
          "repeat": true,
          "fields": {
            "item": {
              "type": "Text",
              "config": {
                "label": "Service Item",
                "placeholder": "e.g., UX/UI Design"
              }
            }
          }
        }
      },
      "service_offerings": {
        "type": "Group",
        "config": {
          "label": "Service Offerings",
          "repeat": true,
          "fields": {
            "offering_title": {
              "type": "Text",
              "config": {
                "label": "Offering Title",
                "placeholder": "e.g., Editorial"
              }
            },
            "offering_description": {
              "type": "Text",
              "config": {
                "label": "Offering Description",
                "placeholder": "Description of this service offering"
              }
            },
            "sub_offerings": {
              "type": "Group",
              "config": {
                "label": "Sub Offerings",
                "repeat": true,
                "fields": {
                  "sub_offering_title": {
                    "type": "Text",
                    "config": {
                      "label": "Sub Offering Title",
                      "placeholder": "e.g., Books & Magazine"
                    }
                  },
                  "sub_offering_description": {
                    "type": "Text",
                    "config": {
                      "label": "Sub Offering Description",
                      "placeholder": "Description of this specific service"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "process_steps": {
        "type": "Group",
        "config": {
          "label": "Process Steps",
          "repeat": true,
          "fields": {
            "step_name": {
              "type": "Text",
              "config": {
                "label": "Step Name",
                "placeholder": "e.g., Strategy, Creative Concept"
              }
            },
            "step_description": {
              "type": "StructuredText",
              "config": {
                "label": "Step Description",
                "placeholder": "Step details",
                "allowTargetBlank": true,
                "multi": "paragraph"
              }
            },
            "step_details": {
              "type": "Group",
              "config": {
                "label": "Step Details",
                "repeat": true,
                "fields": {
                  "step_details_week": {
                    "type": "Text",
                    "config": {
                      "label": "Step Week",
                      "placeholder": "e.g., Week 1, Week 2"
                    }
                  },
                  "step_details_title": {
                    "type": "Text",
                    "config": {
                      "label": "Step Title",
                      "placeholder": "e.g., Discovery, Research"
                    }
                  },
                  "step_details_description": {
                    "type": "Text",
                    "config": {
                      "label": "Step Description",
                      "placeholder": "Description of this specific service"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "related_projects": {
        "type": "Group",
        "config": {
          "label": "Related Projects",
          "repeat": true,
          "fields": {
            "project": {
              "type": "Link",
              "config": {
                "label": "Project",
                "select": "document",
                "customtypes": ["project_post"]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "block_content": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO Title"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "SEO Description"
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 2400,
            "height": 1260
          }
        }
      }
    }
  }
}
