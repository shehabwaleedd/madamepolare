{
  "format": "custom",
  "id": "settings",
  "label": "Settings",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "site_title": {
        "type": "Text",
        "config": {
          "label": "Site Title",
          "placeholder": "Enter site title (e.g. Madamepolare)"
        }
      },
      "site_logo": {
        "type": "Image",
        "config": {
          "label": "Logo",
          "constraint": {
            "width": 150,
            "height": 150
          },
          "thumbnails": []
        }
      },
      "nav_items": {
        "type": "Group",
        "config": {
          "label": "Navigation Links",
          "fields": {
            "link_label": {
              "type": "Text",
              "config": {
                "label": "Link Label",
                "placeholder": "Enter link text"
              }
            },
            "link_url": {
              "type": "Link",
              "config": {
                "label": "Link",
                "placeholder": "Select a link",
                "select": null
              }
            }
          }
        }
      }
    }
  }
}
